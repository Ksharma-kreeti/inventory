<div class="page-header">
  <%= link_to 'Add', new_category_path, class: "btn btn-primary pull-right" %>
  <h3>Categories(<%= @categories.count %>)</h3>
</div>
<table class="table table-striped table-last">
  <tr>
    <th>Name</th>
    <th>&nbsp;</th>
  </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= edit_link(edit_category_path(category)) %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
