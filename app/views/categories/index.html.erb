<div class="page-header">
  <%= link_to 'Add', new_category_path, data: { remote_popup: true, title: t('.add.popup.title') },  class: "btn btn-primary pull-right" %>
  <h3><%= t('.heading') %></h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th><%= t('.table.th.id') %></th>
      <th><%= t('.table.th.id') %></th>
      <th></th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= edit_link(edit_category_path(category), t('.edit.popup.title')) %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
