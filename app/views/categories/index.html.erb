<div class="page-header">
  <%= link_to 'Add', new_category_path, data: { remote_popup: true, title: "Create Category" },  class: "btn btn-primary pull-right" %>
  <h3>Categories</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= edit_link(edit_category_path(category), "Category") %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
