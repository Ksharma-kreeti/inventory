<div class="page-header">
  <%= link_to t('button.add'), new_category_path, data: { remote_popup: true, title: t('.add.popup.title') },  class: "btn btn-primary pull-right" %>
  <h3><%= t('.heading') %></h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th><%= t('.table.th.name') %></th>
      <th></th>
    </tr>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, items_path(category: category) %> (<%= category.items.size %>)</td>
        <td>
          <% if category.items.empty? %>
            <%= edit_link(edit_category_path(category), t('.edit.popup.title')) %>
            <%= delete_link(category_path(category)) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
