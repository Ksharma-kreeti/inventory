<div class="back">
  <%= back_link %>
</div>
<section class="main-info">
  <h3><%= @issue.title %></h3>
  <p><span>Id: </span><%= @issue.id %></p>

  <% if @issue.system.present? %>
    <p><span>System: </span><%= @issue.system.name %></p>
  <% end %>

  <% if @issue.item.present? %>
    <p><span>Item: </span><%= @issue.item.name %></p>
  <% end %>

  <% if @issue.description.present? %>
    <p><span>Description: </span><%= @issue.description %></p>
  <% end %>

  <% if @issue.closed_at.present? %>
    <p><span>Resolved at: </span><%= format_date(@issue.closed_at) %></p>
  <% else %>
    <p><span>Status: </span>Pending</p>
  <% end %>

  <% if @issue.note.present? %>
    <p><span>Note: </span><%= @issue.note %></p>
  <% end %>

  <% if @issue.resolution.present? %>
    <p><span>Resolution: </span><%= @issue.resolution.try(:name) %></p>
  <% end %>

  <%= edit_link(edit_issue_path(@issue), "Issue") %>
  <%= link_to 'Resolution', get_resolution_issue_path(@issue), data: { remote_popup: true, title: "Resolution" }, class: "btn btn-primary btn-sm" %>
</section>
