<%= render 'shared/errors', obj: @issue %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :items, "Item:" %></div>
  <div class="col-sm-8"><%= f.collection_select :item_id, Item.all, :id, :name, include_blank: "Select" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :systems, "System :" %></div>
  <div class="col-sm-8"><%= f.collection_select :system_id, System.all, :id, :name, include_blank: "Select" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :title, "Title  :", class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :title, class: 'form-control', placeholder: "Title" , required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :description, "Description :" %></div>
  <div class="col-sm-8"><%= f.text_area :description, class: 'form-control', placeholder: "Description" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :closed_at, "Closing Time :" %></div>
  <div class="col-sm-8"><%= f.text_field :closed_at, class: 'form-control datepicker', placeholder: "YYYY/MM/DD" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :note, "Notes :" %></div>
  <div class="col-sm-8"><%= f.text_area :note, rows: "2", class: 'form-control', placeholder: "Information" %></div>
</div>
<%= unobtrusive_js(" $('.datepicker').datepicker({ format: 'dd/mm/yyyy' });") %>
