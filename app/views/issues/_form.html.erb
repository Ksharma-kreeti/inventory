<%= render 'shared/errors', obj: @issue %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :title, "Title  :", class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :title, class: 'form-control', placeholder: "Title" , required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :items, "Item :" %></div>
   <div class="col-sm-8"><%= f.select :item_id, options_for_select(Item.all.map{ |i| [name_with_id(i), i.id, { 'data-purchase-on': i.purchase_on }] }), { prompt: "Select" }, class: 'form-control' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :systems, "System :" %></div>
  <div class="col-sm-8"><%= f.select :system_id, options_for_select(System.all.map{ |s| [s.name, s.id, { 'data-assembled_on': s.assembled_on }] }), { prompt: "Select" }, class: 'form-control' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :description, "Description :" %></div>
  <div class="col-sm-8"><%= f.text_area :description, class: 'form-control', placeholder: "Description" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :priority, "Priority :" %></div>
  <div class="col-sm-8"><%= f.select :priority, Issue.priorities.map{ |key, value| [key.humanize, key] }, { include_blank: "Select" }, class: 'form-control' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :note, "Notes :" %></div>
  <div class="col-sm-8"><%= f.text_area :note, rows: "2", class: 'form-control', placeholder: "Information" %></div>
</div>
<%= unobtrusive_js("$('.datepicker').datetimepicker({ format: 'DD/MM/YYYY' });") %>
