<div class="center-block form-container">
  <%= form_for @issue, class: "form-horizontal" do |f| %>
    <div class="form-group row">
      <div class="col-sm-4"><%= f.label :resolution, "Resolution :" %></div>
      <div class="col-sm-8"><%= f.collection_select :resolution_id, Resolution.all, :id, :name, { include_blank: "Select" }, class: "form-control" %></div>
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
