<div class="page-header">
  <%= link_to t('button.new'), new_issue_path(item_id: @item), data: { remote_popup: true, title: t('.add.popup.title') }, class: "btn btn-primary pull-right" %>
  <h3>
    <% if params[:item_id].present? %>
      <%= t('.item') %> <%= @item.name_with_id %>
    <% else %>
      <%= t('.heading') %>
    <% end %>
  </h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th><%= t('.table.th.id') %></th>
      <th><%= t('.table.th.issue') %></th>
      <th><%= t('.table.th.system') %></th>
      <th><%= t('.table.th.item') %></th>
      <th><%= t('.table.th.resolution') %></th>
      <th><%= t('.table.th.priority') %></th>
      <th><%= t('.table.th.closed') %></th>
      <th>&nbsp;</th>
    </tr>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.id, issue_path(issue) %></td>
        <td><%= link_to issue.title, issue_path(issue) %></td>
        <td><%= link_to issue.system.name, system_path(issue.system) if issue.system %></td>
        <td><%= link_to issue.item.name_with_id, item_path(issue.item) if issue.item %></td>
        <td><%= issue.resolution.try(:name) %></td>
        <td>
          <%= select_tag :priority, options_for_select(Issue.priorities.map{|key, value| [key.humanize, key]}, selected: issue.priority), prompt: t('.table.td.placeholder.select') , data: { remote: true, url: set_priority_issue_path(issue), method: :put }, class: 'select-option' %>
        </td>
        <td>
          <% if issue.closed_at %>
            <%= format_date(issue.closed_at) %>
          <% else %>
            <%= link_to t('button.close'), close_issue_path(issue), data: { remote_popup: true, title: t('.close.popup.title') }, class: 'btn btn-default' %>
          <% end %>
        </td>
        <td>
          <%= edit_link(edit_issue_path(issue), t('.edit.popup.title')) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
