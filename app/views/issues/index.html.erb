<div class="page-header">
  <%= link_to 'Add', new_issue_path, class: "btn btn-primary pull-right" %>
  <h3> Issues(<%= @issues.count %>)</h3>
</div>

<table class="table table-striped">
  <tr>
    <th>Issue</th>
    <th>System</th>
    <th>Item</th>
    <th>Title</th>
    <th>Closed At</th>
    <th>&nbsp;</th>
  </tr>
  <% @issues.each_with_index do |issue, index| %>
    <tr>
      <td><%= link_to "issue #{ index+1 }", issue_path(issue) %></td>
      <td><%= link_to "System #{ issue.system_id }", system_path(issue.system) if issue.system %></td>
      <td><%= link_to "Item #{ issue.item_id }", item_path(issue.item) if issue.item %></td>
      <td><%= issue.title %></td>
      <td><%= issue.closed_at.strftime('%d/%m/%Y') if issue.closed_at %></td>
      <td>
        <%= link_to 'Edit', edit_issue_path(issue), class: 'btn btn-default btn-sm' %>
        <%= link_to 'Delete', issue_path(issue), method: :delete, data: { confirm: 'Do you want to delete the Information?' }, class: 'btn btn-default btn-sm' %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
