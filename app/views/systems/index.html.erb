<% provide(:title, 'All System Details') %>
<div class="form-group">
  <%= link_to 'Back', root_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="form-group">
  <%=link_to 'Add New System', new_system_path %>
</div>

<h1>Systems(<%= @systems.count %>)</h1>
<hr>

<table>
  <tr>
    <th><h4>System</h4></th>
    <th><h4>Assembled on</h4></th>
    <th><h4>Discarded</h4></th>
    <th><h4>Working Status</h4></th>
    <th><h4>Note</h4></th>
    <th><h4>Allocated Person</h4></th>
    <th><h4>Actions</h4></th>
  </tr>
  <% @systems.each_with_index do |system, index| %>
    <tr>
      <td> <%= link_to "System " + (index+1).to_s, system_path(system)  %> </td>
      <td> <%= system.assembled_on %></td>
      <td> <%= system.discarded_at %> </td>
      <td> <%= system.working %> </td>
      <td> <%= system.note %> </td>
      <td> <%= system.employee.try(:name) %>
      <td> <%= link_to 'Edit', edit_system_path(system), class: 'btn btn-default' %> </td>
      <td> <%= link_to 'Delete', system_path(system), method: :delete, data: {confirm: 'Do you want to delete the Information?'}, class: 'btn btn-default' %>
      </td>
      <td><%= link_to 'History', system_history_path(system), class: 'btn btn-default' %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate %>
