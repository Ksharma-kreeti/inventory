<div class="form-group row">
  <div class="col-sm-4"><%= f.label :assembled_on, t('.title.assembled'), class: "required" %></div>
  <div class="col-sm-8"><%= f.text_field :assembled_on, class: 'form-control datepicker', placeholder: t('date'), required: "true", value: format_date(@system.assembled_on) %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :employees, t('.title.allocated') %></div>
  <div class="col-sm-8">
    <%= f.collection_select :employee_id, Employee.company_employees, :id, :name, { include_blank: t('.placeholder.select_employee') }, class: 'form-control' %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :discarded_at, t('.title.discarded') %></div>
  <div class="col-sm-8"><%= f.text_field :discarded_at, class: 'form-control datepicker', placeholder: t('date'), value: format_date(@system.discarded_at) %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :item_ids, t('.title.items') %></div>
  <div class="col-sm-8">
    <%= f.select :item_ids, options_for_select(@system.associable_items.map{ |i| [name_with_id(i), i.id] }, { selected: @system.items.pluck(:id) }), {},{ class: 'form-control',  multiple: true } %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :working, t('.title.status') %></div>
  <div class="col-sm-8">
    <%= t('.title.working') %> <%= f.radio_button(:working, "true", checked: @system.working) %>
    <%= t('.title.not_working') %> <%= f.radio_button(:working, "false", checked: !@system.working) %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :note, t('.title.note') %></div>
  <div class="col-sm-8"><%= f.text_area :note, rows: "2", class: 'form-control', placeholder: t('.placeholder.note') %></div>
</div>
<%= unobtrusive_js("$('.datepicker').datetimepicker({ format: 'DD/MM/YYYY' });") %>
