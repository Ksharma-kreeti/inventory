<div class="form-group">
  <%= link_to 'Back', systems_path, class: "btn btn-lg btn-primary" %>
</div>

<%= render 'shared/errors', obj: @system %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @system, :html => { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :employees, "Select Employee :" %>
        <%= f.collection_select :employee_id, Employee.all,:id, :email, include_blank: "Select Employee" do |cb| %>
            <% cb.text %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :assembled_on, "Assembled on  :" %>
        <%= f.text_field :assembled_on, class: 'form-control datepicker' %>
      </div>
      <div class="form-group">
        <%= f.label :discarded_at, "Discarded at :" %>
        <%= f.text_field :discarded_at, class: 'form-control datepicker' %>
      </div>
      <div class="form-group">
        <%= f.label :working, "Current Status :" %>
        <%= f.label :working, "Working", value: "true" %>
        <%= f.radio_button :working, true, checked: "true" %>
        <%= f.label :working, "Not Working", value: "false" %>
        <%= f.radio_button :working, false %>
      </div>
      <div class="form-group">
        <%= f.label :note, "Notes :" %><br>
        <%= f.text_area :note, rows: "10", class: 'form-control' %>
      </div>
       <div class="form-group">
         <div class="col-lg-offset-2 col-lg-10">
           <%= f.submit nil, :class => 'btn btn-primary' %>
           <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
           systems_path, :class => 'btn btn-default' %>
         </div>
       </div>
    <% end %>
  </div>
</div>
