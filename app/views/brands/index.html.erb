<div class="page-header">
  <%= link_to 'Add', new_brand_path, data: { remote_popup: true, title: "Create Brand" }, class: "btn btn-primary pull-right" %>
  <h3>Brands</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.id %></td>
        <td><%= brand.name %></td>
        <td><%= edit_link(edit_brand_path(brand), "Brand") %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
