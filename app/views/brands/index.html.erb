<div class="page-header">
  <%= link_to t('button.add'), new_brand_path, data: { remote_popup: true, title: t('.add.popup.title') }, class: "btn btn-primary pull-right" %>
  <h3><%= t('.heading') %></h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th><%= t('.table.th.name') %></th>
      <th></th>
    </tr>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, items_path(brand: brand) %></td>
        <td><%= edit_link(edit_brand_path(brand), t('.edit.popup.title')) %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
