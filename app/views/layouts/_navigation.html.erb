<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <div class="navbar-header">
      <% if current_user %>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".collapsed_data">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% end %>
      <%= link_to "Inventory",root_path, class: "navbar-brand", id: "logo" %>
    </div>
    <div class="navbar-collapse collapse collapsed_data">
      <% if current_user %>
        <ul class="nav navbar-nav navbar-left">
          <li class="links">
            <%= link_to 'Employees', employees_path %>
          </li>
          <li class="links">
            <%= link_to 'Brands', brands_path %>
          </li>
          <li class="links">
            <%= link_to 'Categories', categories_path %>
          </li>
          <li class="links">
            <%= link_to 'Items', items_path %>
          </li>
          <li class="links">
            <%= link_to 'Systems', systems_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">More <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="links">
                <%= link_to 'Checkout Details', "#" %>
              </li>
              <li class="links">
                <%= link_to 'Issues', "#" %>
              </li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right col-sm-3">
          <div class="row">
            <li class="user-name col-sm-8">
              <i class="fa fa-user"></i>
              <%= current_user.full_name.present? ? current_user.full_name : current_user.email %>
            </li>
            <li class="logout col-sm-4">
              <%= link_to('logout', logout_path, class: 'btn btn-sm btn-danger', title: 'Logout', method: :delete) %>
            </li>
          </div>
       </ul>
       <% end %>
    </div>
  </div>
</div>
