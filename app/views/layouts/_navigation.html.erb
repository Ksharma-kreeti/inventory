<% if current_user %>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".collapsed_data">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Inventory",root_path, class: "navbar-brand", id: "logo" %>
      </div>
      <div class="navbar-collapse collapse collapsed_data">
        <div class="top-links">
          <ul class="nav navbar-nav navbar-left">
            <li class="links">
              <%= link_to 'Checkin / Checkout', checkouts_path %>
            </li>
            <li class="links">
              <%= link_to 'Employees', employees_path %>
            </li>
            <li class="links">
              <%= link_to 'Issues', issues_path %>
            </li>
            <li class="links">
              <%= link_to 'Items', items_path %>
            </li>
            <li class="links">
              <%= link_to 'Systems', systems_path %>
            </li>
            <li class="dropdown menu-custom">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">More <span class="caret"></span></a>
