<%= render 'shared/errors', obj: @item %>

<%= form_for @item, html: { multipart: true } do |f| %>
<div class="form-group">
  <%= f.label :model_number, "Model Number:", class: 'required' %>
  <%= f.text_field :model_number, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :serial_number , "Serial Number:" , class: 'required' %>
  <%= f.text_field :serial_number, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :purchase_on , "Purchased On:" , class: 'required' %>
  <%= f.text_field :purchase_on, class: 'form-control datepicker' %>
</div>
<div class="form-group">
  <%= f.label :category_id , "Category Name:", class: 'required' %>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: 'Select Category' %>
</div>
<div class="form-group">
  <%= f.label :brand_id , "Brand Name:", class: 'required' %>
  <%= f.collection_select :brand_id, Brand.all, :id, :name, prompt: 'Select Brand' %>
</div>
<div class="form-group">
  <%= f.label :purchase_from , "Purchased From:", class: 'required' %>
  <%= f.text_field :purchase_from, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :purchase_note , "Purchased Note :" %>
  <%= f.text_field :purchase_note, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :warranty_expires_on , "Warranty Expires On :" %>
  <%= f.text_field :warranty_expires_on, class: 'form-control datepicker' %>
</div>
<div class="form-group">
  <%= f.label :working, "Current Status :" %>
  Working: <%= f.radio_button(:working, "true", checked: true) %>
  Not Working: <%= f.radio_button(:working, "false") %>
</div>
<div class="form-group">
  <%= f.label :system_id , "System ID:" %>
  <%= f.collection_select :system_id, System.all, :id, :id,  prompt: 'Select System' %>
</div>
<div class="form-group">
  <%= f.label :employee_id , "Employee Name:" %>
  <%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: 'Select Employee' %>
</div>
<div class="center">
  <%= f.submit "Enter Details", class: "btn btn-primary" %>
</div>
<% end %>
