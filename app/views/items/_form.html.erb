<%= render 'shared/errors', obj: @item %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :model_number, "Model Number:", class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :model_number, class: 'form-control', placeholder: "Model number", required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :serial_number , "Serial Number:" , class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :serial_number, class: 'form-control', placeholder: "Serial Number", required: true %></div>
</div>
<div class="form-group row">
    <div class="col-sm-4"><%= f.label :purchase_on , "Purchased On:" , class: 'required' %></div>
    <div class="col-sm-8"><%= f.text_field :purchase_on, class: 'form-control datepicker', placeholder: "YYYY/MM/DD", required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :category_id , "Category Name:", class: 'required' %></div>
  <div class="col-sm-8"><%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Select Category' }, required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :brand_id , "Brand Name:", class: 'required' %></div>
  <div class="col-sm-8"><%= f.collection_select :brand_id, Brand.all, :id, :name,  { include_blank: 'Select Brand' }, required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :purchase_from , "Purchased From:", class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :purchase_from, class: 'form-control', placeholder: "Suppilers Name", required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :purchase_note , "Purchased Note :" %></div>
  <div class="col-sm-8"><%= f.text_field :purchase_note, class: 'form-control', placeholder: "Note" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :warranty_expires_on , "Warranty Expires On :" %></div>
  <div class="col-sm-8"><%= f.text_field :warranty_expires_on, class: 'form-control datepicker', placeholder: "YYYY/MM/DD" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :working, "Item Working Status :" %></div>
  <div class="col-sm-8">
    <%= f.label :working, "Working", value: "true" %>
    <%= f.radio_button :working, true, checked: "true" %>
    <%= f.label :working, "Not Working", value: "false" %>
    <%= f.radio_button :working, false %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :system_id , "System ID:" %></div>
  <div class="col-sm-8"><%= f.collection_select :system_id, System.all, :id, :id,  prompt: 'Select System' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :employee_id , "Employee Name:" %></div>
  <div class="col-sm-8"><%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: 'Select Employee' %></div>
</div>
