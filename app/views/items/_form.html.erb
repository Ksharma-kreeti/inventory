<%= render 'shared/errors', obj: @item %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :model_number, "Model Number:" %></div>
  <div class="col-sm-8"><%= f.text_field :model_number, class: 'form-control', placeholder: "Model number" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :serial_number , "Serial Number:" , class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :serial_number, class: 'form-control', placeholder: "Serial Number", required: true %></div>
</div>
<div class="form-group row">
    <div class="col-sm-4"><%= f.label :purchase_on , "Purchased On:" , class: 'required' %></div>
    <div class="col-sm-8"><%= f.text_field :purchase_on, class: 'form-control datepicker', placeholder: "YYYY/MM/DD", required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :category_id , "Category:", class: 'required' %></div>
  <div class="col-sm-8"><%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: 'Select' }, required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :brand_id , "Brand:" %></div>
  <div class="col-sm-8"><%= f.collection_select :brand_id, Brand.all, :id, :name,  { include_blank: 'Select' } %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :purchase_from , "Purchased From:" %></div>
  <div class="col-sm-8"><%= f.text_field :purchase_from, class: 'form-control', placeholder: "Suppilers Name" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :purchase_note , "Purchased Note:" %></div>
  <div class="col-sm-8"><%= f.text_area :purchase_note, class: 'form-control', placeholder: "Note" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :warranty_expires_on , "Warranty Expires On:" %></div>
  <div class="col-sm-8"><%= f.text_field :warranty_expires_on, class: 'form-control datepicker', placeholder: "YYYY/MM/DD" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :working, "Status:" %></div>
  <div class="col-sm-8">
    Working : <%= f.radio_button(:working, "true", checked: @item.working) %>
    Not Working :<%= f.radio_button(:working, "false", checked: !@item.working) %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :system_id , "System:" %></div>
  <div class="col-sm-8"><%= f.collection_select :system_id, System.all, :id, :name,  prompt: 'Select' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :employee_id , "Employee:" %></div>
  <div class="col-sm-8"><%= f.collection_select :employee_id, Employee.all, :id, :name_or_email, prompt: 'Select' %></div>
</div>
