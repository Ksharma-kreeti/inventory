<div class="mx-auto form-container">
  <%= form_for @item, url: { action: "update_parent" }, html: { method: :put }, class: "form-horizontal" do |f| %>
    <div class="form-group row">
      <div class="col-sm-4"><%= f.label :change_parent, t('.change_parent'), class: 'required' %></div>
      <div class="col-sm-8"><%= f.text_field :parent_id, required: true, class: "change-parent form-control" %></div>
    </div>
    <div class="display-item">
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-light" data-dismiss="modal"><%= t('button.cancel') %></button>
      <%= f.submit t('button.update'), class: "btn btn-primary" , disabled: false %>
    </div>
  <% end %>
</div>
