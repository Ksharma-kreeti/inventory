<div class="center-block form-container">
  <%= form_for @item, url: { action: "reallocate" }, html: { method: :put }, class: "form-horizontal" do |f| %>
    <div class="form-group row">
      <div class="col-sm-4"><%= f.label :employee_id , t('.reallocate_to') %></div>
      <div class="col-sm-8"><%= f.collection_select :employee_id, Employee.order_by_name, :id, :name, { include_blank: t('.select_employee'), selected: nil }, class: 'form-control' %></div>
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('button.cancel') %></button>
      <%= f.submit t('button.update'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
