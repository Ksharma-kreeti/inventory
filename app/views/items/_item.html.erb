<% obj.each do |item| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to item.name, item_path(item) %>
        </div>
        <div class="article-body">
          <%= truncate(item.description, length: 100) %>
          <div class="item-meta-details">
            <small>Created by: <%= item.user.email if item.user%>,
                    <%= time_ago_in_words(item.created_at) %> ago,
                    last updated: <%= time_ago_in_words(item.updated_at) %> ago</small>
          </div>
        </div>
        <% if item.items.any? %>
          <p>Categories: <%= render item.categories %></p>
        <% end %>
        <%# if logged_in? && (current_user == item.user || current_user.admin?) %>
          <div class="item-actions">
            <%= link_to "Edit this item", edit_item_path(item), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this item", item_path(item), method: :delete,
                                          data: { confirm: "Are you sure you want to delete the item?"},
                                          class: "btn btn-xs btn-danger" %>
          </div>
        <%# end %>
      </div>
    </div>
  </div>
<% end %>
