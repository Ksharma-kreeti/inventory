<div class="mx-auto form-container">
  <%= form_for @item, url: { action: "discard" }, html: { method: :put }, class: "form-horizontal" do |f| %>
    <div class="form-group row">
      <div class="col-sm-4"><%= f.label :discard_reason, t('.discard_reason'), class: 'required' %></div>
      <div class="col-sm-8"><%= f.text_area :discard_reason, required: true, class: 'form-control' %></div>
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-light" data-dismiss="modal"><%= t('button.cancel') %></button>
      <%= f.submit t('button.update'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
