<div class="form-group row">
  <div class="col-sm-4"><%= f.label :title, t('.title.issue_title'), class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :title, class: 'form-control', placeholder: t('.placeholder.issue_title'), required: true %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :items, t('.title.item') %></div>
  <div class="col-sm-8">
    <%= f.select :item_id, employee_items_list, { include_blank: t('.placeholder.select') }, class: 'form-control' %>
  </div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :description, t('.title.description') %></div>
  <div class="col-sm-8"><%= f.text_area :description, class: 'form-control', placeholder: t('.placeholder.description') %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :priority, t('.title.priority') %></div>
  <div class="col-sm-8"><%= f.select :priority, Issue.priorities.sort_by{ |key, value| key }.map{ |key, value| [key.humanize, key] }, { include_blank: t('.placeholder.select') }, class: 'form-control' %></div>
</div>
<%= unobtrusive_js("$('.datepicker').datetimepicker({ format: 'DD/MM/YYYY' });") %>
