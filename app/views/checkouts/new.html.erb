<div class="form-group">
  <%= link_to 'Back', checkouts_path, class: "btn btn-lg btn-primary" %>
</div>
<div class="form-group">
  <h1 class="center">Add Checking Out</h1>
</div>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@checkout, url: checkouts_path) do |f| %>
      <%= render 'form', f: f %>

      <div class="center">
        <%= f.submit "Create Details", class: "btn btn-primary" %>
        <%= link_to "Cancel", checkouts_path, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
