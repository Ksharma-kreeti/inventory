<div class="form-group">
  <h1 class="center">Edit Details</h1>
</div>
<hr>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@checkout) do |f| %>
      <%= render 'form', f: f %>

      <div class="center">
        <%= f.submit "Update Details", class: "btn btn-primary" %>
        <%= link_to "Cancel", checkout_path(@checkout), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
