<%= render 'shared/errors', obj: @checkout %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :item_id , 'Item:', class: 'required' %></div>
  <div class="col-sm-8"><%= f.select :item_id, options_for_select(Item.available.map{ |i| [i.name, i.id, { 'data-purchase_on': i.purchase_on }] }), prompt: "Select" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :employee_id , 'Employee:' %></div>
  <div class="col-sm-8"><%= f.collection_select :employee_id, Employee.all, :id, :name_or_email, prompt: 'Select Employee' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :checkout , 'Checkout:', class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :checkout, class: 'datepicker col-md-8', placeholder: "YYYY/MM/DD", required: true, value: format_date(@checkout.checkout) %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :check_in, 'Checkin:' %></div>
  <div class="col-sm-8"><%= f.text_field :check_in, class: 'datepicker col-md-8', placeholder: "YYYY/MM/DD", value: format_date(@checkout.check_in) %></div>
</div>
<div class="form-group">
  <%= f.label :reason , 'Reason:', class: 'required' %>
  <%= f.text_area :reason, class: 'form-control', rows: '2', placeholder: "Reason", required: true %>
</div>
<%= unobtrusive_js("$('.datepicker').datetimepicker({ format: 'DD/MM/YYYY' });") %>
