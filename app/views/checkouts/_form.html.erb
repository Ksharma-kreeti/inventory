<%= render 'shared/errors', obj: @checkout %>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :item_id , 'Item:', class: 'required' %></div>
  <div class="col-sm-8"><%= f.collection_select :item_id, Item.available, :id, :name,  { include_blank: 'Select' }, required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :employee_id , 'Employee:' %></div>
  <div class="col-sm-8"><%= f.collection_select :employee_id, Employee.all, :id, :name_or_email, prompt: 'Select Employee' %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :checking_out , 'Checking Out:', class: 'required' %></div>
  <div class="col-sm-8"><%= f.text_field :checking_out, class: 'datepicker col-md-8', placeholder: "YYYY/MM/DD", required: true %></div>
</div>
<div class="form-group">
  <%= f.label :reason , 'Reason:', class: 'required' %>
  <%= f.text_area :reason, class: 'form-control', rows: '2', placeholder: "Reason", required: true %>
</div>
