<%= render 'shared/errors', obj: @checkout %>
<div class="form-group row">
  <div class="col-md-4"><%= f.label :item_id , 'Item:', class: 'required' %></div>
  <%= f.collection_select :item_id, Item.all, :id, :name, prompt: 'Select Item', class: 'col-md-8' %>
</div>
<div class="form-group row">
  <div class="col-md-4"><%= f.label :employee_id , 'Employee:' %></div>
  <%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: 'Select Employee', class: 'col-md-8' %>
</div>
<div class="form-group row">
  <div class="col-md-4"><%= f.label :checking_out , 'Checking Out:', class: 'required' %></div>
  <%= f.text_field :checking_out, class: 'datepicker col-md-8' %>
</div>
<div class="form-group">
  <%= f.label :reason , 'Reason:', class: 'required' %>
  <%= f.text_area :reason, class: 'form-control', rows: '2' %>
</div>
