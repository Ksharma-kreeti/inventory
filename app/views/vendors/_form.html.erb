<div class="form-group row">
  <div class="col-sm-4"><%= f.label :name , t('.title.name'), class: "required" %></div>
  <div class="col-sm-8"><%= f.text_field :name, class: 'form-control', placeholder: t('.placeholder.name'), required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :address, t('.title.address'), class: "required" %></div>
  <div class="col-sm-8"><%= f.text_area :address, class: 'form-control', rows: "2", placeholder: t('.placeholder.address'), required: "true" %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :city, t('.title.city') %></div>
  <div class="col-sm-8"><%= f.text_field :city, class: 'form-control', placeholder: t('.placeholder.city') %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :state, t('.title.state') %></div>
  <div class="col-sm-8"><%= f.text_field :state, class: 'form-control', placeholder: t('.placeholder.state') %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :mobile, t('.title.mobile') %></div>
  <div class="col-sm-8"><%= f.text_field :mobile, class: 'form-control', placeholder: t('.placeholder.mobile') %></div>
</div>
<div class="form-group row">
  <div class="col-sm-4"><%= f.label :email, t('.title.email')  %></div>
  <div class="col-sm-8"><%= f.email_field :email, class: 'form-control', placeholder: t('.placeholder.email') %></div>
</div>
