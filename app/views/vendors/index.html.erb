<div class="page-header">
  <%= link_to t('button.add'), new_vendor_path, data: { remote_popup: true, title: t('.add.popup.title') }, class: "btn btn-primary pull-right" %>
  <h3><%= t('.heading') %></h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th><%= t('.table.th.id') %></th>
      <th><%= t('.table.th.name') %></th>
      <th><%= t('.table.th.email') %></th>
      <th><%= t('.table.th.mobile') %></th>
      <th></th>
    </tr>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= link_to vendor.id, vendor_path(vendor) %></td>
        <td><%= link_to vendor.name, vendor_path(vendor) %></td>
        <td><%= vendor.email if vendor.email.present? %></td>
        <td><%= vendor.mobile %></td>
        <td>
          <%= edit_link(edit_vendor_path(vendor), t('.edit.popup.title')) %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
