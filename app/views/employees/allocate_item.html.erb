<div class="center-block form-container">
  <%= form_for @employee, url: { action: "add_item" }, html: { method: :put }, class: "form-horizontal" do |f| %>
    <div class="form-group row">
      <div class="col-sm-4"><%= f.label :item_id , t('.items') %></div>
      <div class="col-sm-8"><%= select_tag :item, options_for_select(Item.unallocated_items.map { |i| [i.name_with_id, i.id] }, selected: params[:item]), prompt: "Select Item", class: "form-control change-parent", required: true %></div>
    </div>
    <div class="display-item">
    </div>
    <div class="text-right">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('button.cancel') %></button>
      <%= f.submit t('button.update'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
