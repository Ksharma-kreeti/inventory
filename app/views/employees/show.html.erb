<div class="back">
  <%= back_link %>
</div>
<div class="row">
  <section class="col-xs-12 col-sm-5 main-info">
    <h3 class="table-heading"><%= @employee.name %></h3>
    <p><span><%= t('.title.id') %> </span><%= @employee.id %></p>

    <% if @employee.email.present? %>
      <p><span><%= t('.title.email') %> </span><%= @employee.email %></p>
    <% end %>
 
    <p><span><%= t('.title.status') %> </span><%= @employee.active? ? t('.active') : t('.inactive') %></p>

    <% if @employee.external_id.present? %>
      <p><span><%= t('.title.external_id') %> </span><%= @employee.external_id %></p>
    <% end %>
                               
    <% unless @employee.external_id? %>
      <%= edit_link(edit_employee_path(@employee), t('.edit.popup.title')) %>
      <%= delete_link(employee_path(@employee)) %>
    <% end %>  
  </section>
  <section class="col-xs-12 col-sm-7 other-info">
    <h3><%= t('.item_history.heading') %> (<%= @items.count %>)</h3>
    <div class="table-responsive">
      <table class="table table-striped table-last">
        <tr>
          <th class="tweenty"><%= t('.item_history.table.th.item') %></th>
          <th class="tweentythree"><%= t('.item_history.table.th.model_number') %></th>
          <th class="tweentytwo"><%= t('.item_history.table.th.serial_number') %></th>
          <th class="tweenty"><%= t('.item_history.table.th.category') %></th>
          <th class="ten"><%= t('.item_history.table.th.brand') %></th>
          <th class="five"></th>
        </tr>
        <% @items.each do |item| %>
          <tr class="<%= 'pending' if item.unavailable? %>">
            <td><%= link_to item.name_with_id, item_path(item)  %></td>
            <td><%= item.model_number %></td>
            <td><%= item.serial_number %></td>
            <td><%= item.category.name %></td>
            <td><%= item.brand.try(:name) %></td>
            <td class="icon-show"><%= show_link(item_path(item)) %></td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @items, param_name: 'items_page' %>
    </div>
    <h3><%= t('.system_history.heading') %> (<%= @systems.count %>)</h3>
    <div class="table-responsive">
      <table class="table table-striped table-last">
        <tr>
          <th class="tweenty"><%= t('.system_history.table.th.system') %></th>
          <th class="seventyfive"><%= t('.system_history.table.th.assembled_on') %></th>
          <th class="five"></th>
        </tr>
        <% @systems.each do |system| %>
          <tr>
            <td><%= link_to system.name, system_path(system) %></td>
            <td><%= system.assembled_on.present? ? format_date(system.assembled_on) : "" %></td>
            <td class="icon-show">
              <%= show_link(system_path(system)) %>
            </td>
          </tr>
        <% end %>
      </table>
      <%= will_paginate @systems, param_name: 'systems_page' %>
    </div>
  </section>
</div>
