<div class="form-group">
  <%= link_to 'Back', employees_path, class: "btn btn-lg btn-primary", id: "button1" %>
</div>
<div class="row">
  <aside class="col-md-8">
    <section class="user_info">
      <h1>
        <p class="employee_info"> Employee Name: <strong> <%= @employee.name %> </strong> </p>
        <p class="employee_info"> Address: <%= @employee.email %> </p>
        <p class="employee_info"> Mobiler: <%= @employee.mobile %> </p>
        <p class="employee_info"> Designation: <%= @employee.designation %> </p>
        <p class="employee_info"> Status: <%= @employee.active? ? "Currently Working" : "Left Kreeti Technologies" %> </p>
      </h1>
      <%=link_to 'Edit Details', edit_employee_path(@employee) %> <br><br>
    </section>
  </aside>
</div>
