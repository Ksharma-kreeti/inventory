<div class="page-header">
  <%= link_to 'Add', new_employee_path, data: { remote_popup: true, title: "Create Employee" }, class: "btn btn-primary pull-right" %>
  <h3>Employees</h3>
</div>
<div class="table-responsive">
  <table class="table table-striped table-last">
    <tr>
      <th>Id</th>
      <th>Names</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Designation</th>
      <th>Status</th>
      <th>&nbsp;</th>
    </tr>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= link_to employee.id, employee_path(employee) %></td>
        <td><%= link_to employee.name, employee_path(employee) %></td>
        <td><%= employee.email %></td>
        <td><%= employee.mobile %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.active? ? "Working" : "Non-Working" %></td>
        <td>
          <%= edit_link(edit_employee_path(employee), "Employee") %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate %>
