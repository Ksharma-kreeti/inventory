<% provide(:title, 'Edit Employee Details') %>
<div class="form-group">
  <%= link_to 'Back', employees_path, class: "btn btn-lg btn-primary", id: "button1" %>
</div>
<h1 class="center">Edit Details</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@employee) do |f| %>
      <%= render 'shared/errors', obj: @employee %>
      <div class="form-group">
        <%= f.label :name , 'Name of the Employee:' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :email , 'Mailing Address:' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :mobile , 'Mobile Number:' %>
        <%= f.text_field :mobile, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :designation , 'Designation:' %>
        <%= f.text_field :designation, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :active, "Currently Working:" %>
        <table class="update">
          <tr>
            <td><%= " Yes " %><%= f.radio_button 'active', 'true'  %></td>
            <td><%= " No " %><%= f.radio_button 'active', 'false'  %></td>
          </tr>
        </table>
      </div>
      <div class="center">
        <%= f.submit "Update Details", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
